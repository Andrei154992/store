@using Store_Web.Controllers
@model ConfirmationModel

@{
	ViewData["Title"] = "Подтверждение мобильного"; 
}

<h1>Подтверждение мобильного</h1>

<form action="@Url.Action(nameof (OrderController.Confirmate))" method="post">
	<input type="hidden" name="id" value="@Model.OrderId" />
	<input type="hidden" name="cellPhone" value="@Model.CellPhone" />
	<div class="mb-2">
		<label class="mb-2" for="code">Код подтверждения</label>
		<input type="text" class="form-control" name="code" placeholder="0000" />
		@if (Model.Errors.ContainsKey("code"))
		{
			<small class="form-text text-danger">@Model.Errors["code"]</small>
		}
	</div>
	<button type="submit" class="mb-4 btn btn-success">Проверить</button>
</form>

<form action="@Url.Action("SendConfirmationCode")" method="post">
	<input type="hidden" name="id" value="@Model.OrderId" />
	<div class="mb-2">
		<label class="mb-2" for="cellPhone">Мобильный телефон</label>
		<input type="text" class="form-control" name="cellPhone" value="@Model.CellPhone" />
	</div>
	<button type="submit" class="btn btn-success">Повторить код</button>
</form>

